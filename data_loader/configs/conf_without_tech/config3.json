{
    "name": "Stock_CNN_LSTM",
    "n_gpu": 1,
    "arch": {
        "type": "CNNLSTMModel",
        "args": {}
    },
    "data_loader": {
        "type": "StockDataLoader",
        "args": {
            "data_dir": "data_loader/processed_data/spy_processed.csv",
            "batch_size": 64,
            "shuffle": false,
            "validation_split": 0.05,
            "num_workers": 1,
            "input_columns": [
                "EMA_2_3",
                "EMA_2_5",
                "EMA_3_5"
            ],
            "target_columns": [
                "FSMA_10"
            ],
            "window": 20
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "regression_binary_pred",
        "f1_score",
        "confusion_matrix",
        "MAPE",
        "roc_auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 15,
        "tensorboard": true
    },
    "results": {
        "accuracy": 0.6884057971014492,
        "f-1 score": 0.8181818181818181,
        "mse_loss": 0.8442153592283527,
        "mse": 4.4070589145024615,
        "mape": 1.0242814688846982,
        "confusion mtx": [
            [
                30,
                42
            ],
            [
                75,
                27
            ]
        ],
        "sharpe": 1.2946547535084252,
        "precision": 0.6923076923076923,
        "recall": 1.0,
        "roc_auc": 0.4732456140350877
    }
}