{
    "name": "Stock_CNN_LSTM",
    "n_gpu": 1,

    "arch": {
        "type": "CNNLSTMModel",
        "args": {}
    },
    "data_loader": {
        "type": "StockDataLoader",
        "args":{
            "data_dir": "/home/guanyush/Pictures/CSC2516/CNNLSTM/data/STOCK/SPY.csv",
            "batch_size": 2,
            "shuffle": false,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "regression_binary_pred"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 2,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
